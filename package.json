{
  "name": "@swapnachalla/document-viewer",
  "version": "1.0.0",
  "description": "A modern React component library for viewing and comparing PDF documents and images side-by-side",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/swapnachalla/Document-Viewer",
  "private": false,
  "keywords": [
    "react",
    "pdf",
    "viewer",
    "compare",
    "document",
    "image",
    "pdf.js",
    "side-by-side",
    "comparison",
    "component",
    "library",
    "typescript"
  ],
  "author": {
    "name": "Document Viewer Team",
    "email": "swapnachalla@example.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/swapnachalla/Document-Viewer.git"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "npm run clean && tsc --project tsconfig.lib.json && npm run copy-styles",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "CI=true react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "prebuild": "npm run type-check && npm run test:ci",
    "postbuild": "echo 'Library build completed successfully!'",
    "dev": "npm start",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
   "copy-styles": "cp src/index.css dist/index.css"
  },
  "eslintConfig": {
    "extends":[ 
      "react-app",    
      "react-app/jest"
  ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "pdfjs-dist": "^3.11.174"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.15.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "autoprefixer": "^10.4.14",

    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/index.ts",
      "!src/reportWebVitals.ts",
      "!src/setupTests.ts"
    ],
    "testMatch": [
      "<rootDir>/src/**/?(*.)+(spec|test).{ts,tsx}"
    ]
  }
}
