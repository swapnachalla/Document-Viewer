{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/esm",
    "declaration": true,
    "declarationDir": "dist",
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "isolatedModules": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": false
  },
  "include": [
    "src/lib/**/*",
    "src/components/**/*"
  ],
  "exclude": [
    "src/App.tsx",
    "src/index.js",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "dist",
    "node_modules"
  ]
}